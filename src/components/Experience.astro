import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
    {
        date: 'October 2025',
        title: 'E-Commerce UI code in Tailwind CSS - Company Name',
        description: 'Get started with dozens of web components and interactive elements built on top of Tailwind CSS.',
        link: 'https://example.com/ecommerce-ui'
    },
    {
        date: 'September 2024',
        title: 'Marketing UI design in Figma - Company Name',

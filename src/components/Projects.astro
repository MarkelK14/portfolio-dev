---
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import Express from "./icons/Express.astro";
import MongoDB from "./icons/MongoDB.astro";
import NodeJS from "./icons/NodeJS.astro";
import JavaScript from "./icons/JavaScript.astro";
import GitHubIcon from "./icons/GitHub.astro";
import LinkIcon from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#f26e35] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#15a4eb] text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#F3D024] text-black",
    icon: JavaScript,
  },
  EXPRESS: {
    name: "Express.js",
    class: "bg-[#000000] text-white",
    icon: Express,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-[#47A248] text-white",
    icon: MongoDB,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-[#60A249] text-white",
    icon: NodeJS,
  },
};

const PROJECTS = [
  {
    title: "Password Generator",
    description:
      "A simple password generator that allows you to create secure passwords with custom length and character types.",
    link: "https://generatesafepassword.netlify.app/",
    github: "https://github.com/MarkelK14/password-generator",
    image: "/projects/password-generator.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.TAILWIND, TAGS.JAVASCRIPT],
  },
  {
    title: "Drag & Drop Kanban Board",
    description:
      "A simple drag and drop kanban board that allows you to create and manage tasks.",
    link: "https://dragdropkanban.netlify.app/",
    github: "https://github.com/MarkelK14/kanban-board",
    image: "/projects/kanban-board.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "BilbaoCam Telegram BOT",
    description:
      "A Telegram bot that lets you interact and view live images from public cameras located around the city of Bilbao.",
    link: "https://t.me/BilbaoCamBot",
    github: "https://github.com/MarkelK14/bilbaocam-telegram-bot",
    image: "/projects/bilbaocam-telegram-bot.webp",
    tags: [TAGS.NODEJS, TAGS.EXPRESS, TAGS.MONGODB],
  },
];
---

<div class="flex flex-col gap-y-16 mt-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={title}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-orange-500 dark:text-yellow-300">
            {title}
          </h3>
          <div class="flex flex-wrap mt-4">
            <ul class="flex flex-row flex-wrap mb-2 gap-x-2 gap-y-2">
              {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 justify-center items-center`}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 dark:text-gray-200">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHubIcon class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <LinkIcon class="size-6" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>

---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}

const PROJECTS = [
    {
        title: "A beautiful library with SVG logos - Svgl",
        description: "Created from scractch with Next.js, Tailwind CSS and React. It's a library of SVG logos from the most popular brands. Optimized for SEO and performance.",
        link: "https://svgl.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: [TAGS.NEXT, TAGS.TAILWIND],
    }
]
---

{
    PROJECTS.map(({title, description, tags, image}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex flex-row mb-2 gap-x-2">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img loading="lazy" class="rounded shadow-2xl shadow-white/10 aspect-video" src={image} alt={`Screenshot of the project ${title}`} />
        </article>
    ))
}
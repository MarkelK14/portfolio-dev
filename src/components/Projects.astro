---
const PROJECTS = [
    {
        title: "A beautiful library with SVG logos - Svgl",
        description: "Created from scractch with Next.js, Tailwind CSS and React. It's a library of SVG logos from the most popular brands. Optimized for SEO and performance.",
        link: "https://svgl.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",
        tags: ["Next.js", "Tailwind CSS", "React"]
    }
]
---

{
    PROJECTS.map(({title, description, tags, image}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul>
                {tags.map(tag => (
                    <li>{tag}</li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Screenshot of the project ${title}`} />
        </article>
    ))
}
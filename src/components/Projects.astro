---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import HTML from "./icons/HTML.astro"
import CSS from "./icons/CSS.astro"
import JavaScript from "./icons/JavaScript.astro"
import GitHubIcon from "./icons/GitHub.astro"
import ChainIcon from "./icons/Chain.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#E5532D] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#2D53E5] text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#F3D024] text-black",
    icon: JavaScript,
  },
}

const PROJECTS = [
    {
        title: "Password Generator",
        description: "A simple password generator that allows you to create secure passwords with custom length and character types.",
        link: "https://generatesafepassword.netlify.app/",
        github: "https://github.com/MarkelK14/password-generator",
        image: "/projects/password-generator.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.TAILWIND, TAGS.JAVASCRIPT],
    }
]
---

{
    PROJECTS.map(({title, description, tags, image, link, github}) => (
        <article>
            <h3 class="text-2xl font-semibold text-orange-500 dark:text-yellow-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 dark:text-gray-200 text-pretty">{description}</p>
            <ul class="flex flex-row mb-5 gap-x-2">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img loading="lazy" class="rounded shadow-2xl shadow-white/10 aspect-video" src={image} alt={`Screenshot of the project ${title}`} />
            <ul class="flex flex-row-reverse mb-5 gap-x-4">
            {
                link && (
                <li><a href={link}
                class="bg-white/5 
                border dark:border-white/10 border-gray-300
                rounded-md
                inline-flex justify-center items-center gap-x-2
                py-1 px-2 md:py-2 md:px-4 mt-5
                text-xs md:text-base dark:text-gray-200
                transition
                hover:scale-110 hover:bg-white/10">
                <ChainIcon class="size-6" />
                Preview
                </a></li>
                )
            }
            {
                github && (
                <li><a href={github}
                class="bg-white/5 
                border dark:border-white/10 border-gray-300
                rounded-md
                inline-flex justify-center items-center gap-x-2
                py-1 px-2 md:py-2 md:px-4 mt-5
                text-xs md:text-base dark:text-gray-200
                transition
                hover:scale-110 hover:bg-white/10">
                <GitHubIcon class="size-6" />
                Code
                </a></li>
                )
            }
            </ul>
        </article>
    ))
}